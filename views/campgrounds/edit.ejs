<% include ../partails/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Edit <%= campground.name %></h1>
    <div class="media">
    <div class="col-lg-4 col-sm-12">
       <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
           <div class="form-group">
               <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name%>"></input>
           </div>
            <div class="form-group">
               <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"></input>
           </div>
           <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image%>"></input>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description%>"></input>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Update camp</button>
            </div>
        </form>
        <a class="btn btn-md btn-default" href="/campgrounds"><span>Go Back</span></a>
    </div>  
    </div>
    </div>
  </div>
<% include ../partails/footer %>