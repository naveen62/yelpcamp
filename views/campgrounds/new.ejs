<% include ../partails/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align:center">Create new campground</h1>
    <div class="media">
    <div class="col-lg-4 col-sm-12">
       <form action="/campgrounds" method="POST">
           <div class="form-group">
               <input class="form-control" type="text" name="name" placeholder="name"></input>
           </div>
            <div class="form-group">
               <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01"></input>
           </div>
           <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url"></input>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="description"></input>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Add campground</button>
            </div>
        </form>
        <a class="btn btn-md btn-default" href="/campgrounds"><span>Go Back</span></a>
    </div>
    </div>
    </div>
  </div>
<% include ../partails/footer %>